@{
    ViewData["Title"] = "Lista";
}

<h1>Tela de Jogadores</h1>

<form method="post" action="@Url.Action("Cadastrar")">
    <label for="">Nome</label>
    <input type="text" name="Nome" required placeholder="Insira o nome do jogador...">

    <label for="">Email</label>
    <input type="text" name="Email" required placeholder="Insira seu email">

    <label for="">Senha</label>
    <input type="password" name="Senha" required placeholder="Insira sua senha">

    <label for="">Equipe</label>
    <select name="IdEquipe" id="IdEquipe">
        <option value="0">Selecione uma equipe:</option>
        @foreach (Equipe equipe in ViewBag.Equipe)
        {
            <option value="@equipe.IdEquipe">@equipe.Nome</option>
        }
    </select>

    <button type="submit">Cadastrar</button>
</form>


<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Equipe</th>
            <th colspan="2">Ações</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Jogador jogador in ViewBag.Jogador)
        {
            <tr>
                <td>@jogador.IdJogador</td>
                <td>@jogador.Nome</td>
                <td>@jogador.Email</td>
                <td> <img src="/img/Equipes/@jogador.Equipe.Imagem" width="85px" alt=""> </td>
                <td> <a asp-area="Link para excluir jogador" asp-controller="Jogador" asp-action="Remover" asp-route-id="@jogador.IdJogador">Deletar</a></td>
                <td> <a asp-area="Link para editar jogador" asp-controller="Jogador" asp-action="Editar" asp-route-id="@jogador.IdJogador">Editar</a></td>
            </tr>
        }
    </tbody>
</table>
