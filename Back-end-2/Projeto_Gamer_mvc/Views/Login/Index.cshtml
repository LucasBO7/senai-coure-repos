@model Jogador

@{
    ViewData["Title"] = "Login";
}

<h1>Tela de Login</h1>
<h2>
    @TempData.Peek("Message")
</h2>

<form method="post" action="@Url.Action("Logar")">
    <label for="Email">Email</label>
    <input type="email" id="Email" name="Email" required placeholder="Insira seu email...">

    <label for="Senha">Senha</label>
    <input type="password" id="Senha" name="Senha" required placeholder="Insira sua senha...">

    <button type="submit">Logar</button>
</form>